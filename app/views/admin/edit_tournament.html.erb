<script type="text/javascript">

  function cancelEvent(){
    window.location = '/add_tournament';
  }

</script>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Editing <%= @tournament.name %></h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Editing Tournament
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <% if flash[:notice] %>
              <div class="alert alert-success alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                <%= flash[:notice] %>
              </div>
            <% end %>
            <form role="form" action="/admin/update_tournament">
              <div class="form-group">
                <label>Tournament Name</label>
                <input value="<%= @tournament.name %>" class="form-control" name="name"/>
              </div>

              <div class="form-group">
                <label>Start Date</label>
                <input value="<%= @tournament.start_date %>" class="form-control" name="start_date"/>
              </div>

              <div class="form-group">
                <label>End Date</label>
                <input value="<%= @tournament.end_date %>" class="form-control" name="end_date"/>
              </div>

              <div class="form-group">
                <label>Sponsored By</label>
                <input value="<%= @tournament.sponsored_by %>" class="form-control" placeholder="Sponsored by" name="sponsor"/>
              </div>

              <!--<div class="form-group">
                <label>Profile Pic</label>
                <input type="file"/>
              </div>-->
              <%= hidden_field_tag("tournament_id", params[:tournament_id]) %>
              <button type="submit" class="btn btn-default">Submit Button</button>
              <button onclick="cancelEvent();" type="reset" class="btn btn-danger">Cancel</button>
            </form>
          </div>

        </div>

      </div>
    </div>

  </div>

</div>

<!-- /.row -->