<script type="text/javascript">
  function addTournamentResult(tournamentID){
    window.location = "/add_my_tourney_result/" + tournamentID;
  }
</script>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @tournament.name %></h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<form action="/admin/capture_tourney_results">
<div class="panel panel-default">
  <div class="panel-heading">
    Total Participants (<%= @tournament_participants.count %> )
  </div>
  <div class="row">
    <div class="col-lg-12">
      <br />
      <div class="panel panel-default">
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Phone #</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>NickName</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <% count = 0 %>
                <% @tournament_participants.each do |participant| %>
                  <tr>
                    <td><%= count= count + 1 %></td>
                    <td><%= participant.phone_number %></td>
                    <td><%= participant.first_name %></td>
                    <td><%= participant.last_name %></td>
                    <td><%= participant.nick_name %></td>
                    <td><input name="participants[<%= participant.user_id %>]" placeholder="Enter Result Here e.g 4/5" class="form-control col-lg-3"/></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>

    <!-- /.col-lg-6 -->

    <!-- /.col-lg-6 -->
  </div>
</div>
  <%= hidden_field_tag("tournament_id", params[:tournament_id]) %>
<button class="btn btn-primary" type="submit">Submit Button</button>
<button class="btn btn-danger">Cancel Button</button>
</form>