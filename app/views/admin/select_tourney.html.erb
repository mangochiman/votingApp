<script type="text/javascript">
  var tournementID = '<%= params[:tournament_id] %>'
  function addTourneyParticipants(){
    window.location = '/add_tourney_participants/' + tournementID;
  }

</script>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @tournament.name %></h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Participants (<%= @tournament_participants.count %>)
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Phone #</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>NickName</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% @tournament_participants.each do |participant| %>
                <tr>
                  <td><%= count= count + 1 %></td>
                  <td><%= participant.phone_number %></td>
                  <td><%= participant.first_name %></td>
                  <td><%= participant.last_name %></td>
                  <td><%= participant.nick_name %></td>
                  <td><button class="btn btn-danger btn-block" type="button">Delete</button></td>
                </tr>
              <% end %>

            </tbody>
          </table>
        </div>
        <button onclick="addTourneyParticipants();" class="btn btn-primary pull-right">Add Participants</button><br />
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-6 -->
  <div class="col-lg-6">
