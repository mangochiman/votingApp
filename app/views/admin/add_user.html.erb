<script type="text/javascript">

  function editUser(userID){
    window.location = '/edit_user/' + userID;
  }

</script>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Add/Edit Users</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        New User
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <% if flash[:notice] %>
              <div class="alert alert-success alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                <%= flash[:notice] %>
              </div>
            <% end %>
            <form role="form" action="/admin/create_user">
              <div class="form-group">
                <label>Phone #</label>
                <input class="form-control" placeholder="Phone #" name="phone_number"/>
              </div>

              <div class="form-group">
                <label>First Name</label>
                <input class="form-control" placeholder="First Name" name="first_name"/>
              </div>

              <div class="form-group">
                <label>Last Name</label>
                <input class="form-control" placeholder="Last Name" name="last_name"/>
              </div>

              <div class="form-group">
                <label>Nick Name</label>
                <input class="form-control" placeholder="Nick Name" name="nick_name"/>
              </div>

              <div class="form-group">
                <label>Admin?</label>
                <select class="form-control" name="admin">
                  <option>No</option>
                  <option>Yes</option>
                </select>
              </div>

              <button type="submit" class="btn btn-default">Submit Button</button>
              <button type="reset" class="btn btn-default">Reset Button</button>
            </form>
          </div>

        </div>

      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        Registered Users(<%=  @users.count %>)
      </div>
      <div class="row">
        <div class="col-lg-12">
          <br />
          <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Phone #</th>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>NickName</th>
                      <th>Role</th>
                      <th>&nbsp;</th>
                      <th>&nbsp;</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% count = 0 %>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= count= count + 1 %></td>
                        <td><%= user.phone_number %></td>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.nick_name %></td>
                        <td><%= user.user_roles.last.role rescue '' %></td>
                        <td><button onclick="editUser('<%= user.user_id %>')" class="btn btn-warning btn-block" type="button">Edit</button></td>
                        <td><button class="btn btn-danger btn-block" type="button">Delete</button></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->

        <!-- /.col-lg-6 -->
      </div>
    </div>

  </div>

</div>

<!-- /.row -->