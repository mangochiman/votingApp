<script type="text/javascript">
  
  var tournamentID = '<%= params[:tournament_id] %>';
  function cancelEvent(){
    window.location = '/select_tourney/' + tournamentID;
  }

</script>
<style type="text/css">
  select[multiple], select[size] {
    min-height: 400px;
  }
</style>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @tournament.name %></h1>
  </div>
</div>




<div class="row">
  <div class="col-lg-5">
    <form role="form" action="/admin/create_tourney_participants">

      <div class="form-group">
        <label>Participants: Ctrl and click record to select multiple records</label>
        <select name="user_ids[]" class="form-control" multiple="" height="200px">
          <% count = 1 %>
          <% @users.each do |user| %>
            <option value="<%= user.user_id %>"><%= "#{count}. #{user.first_name} #{user.last_name} (#{user.phone_number})" %></option>
            <% count = count + 1 %>
          <% end %>
        </select>
      </div>
      <%= hidden_field_tag("tournament_id", params[:tournament_id]) %>
      <button class="btn btn-primary" type="submit">Submit Button</button>
      <button class="btn btn-warning" type="reset">Reset Button</button>
      <button onclick="cancelEvent();" class="btn btn-danger" type="reset">Cancel Button</button>
    </form>
  </div>
  <!-- /.col-lg-6 (nested) -->

  <!-- /.col-lg-6 (nested) -->
</div>