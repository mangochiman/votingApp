<script type="text/javascript">
  
  function cancelEvent(){
    window.location = "/user_profile";
  }
  
</script>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Change Password</h1>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissable">
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Change Password
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <form role="form" action="/users/update_password" method="POST">
              <div class="form-group">
                <label>Old Password</label>
                <input class="form-control" placeholder="Password" name="old_password" required="true" type="password" required="true"/>
              </div>

              <div class="form-group">
                <label>New Password</label>
                <input class="form-control" placeholder="Password" name="password" required="true" type="password" required="true"/>
              </div>

              <div class="form-group">
                <label>Confirm New Password</label>
                <input class="form-control" placeholder="Confirm Password" name="confirm_password" required="true" type="password" required="true"/>
              </div>

              <button type="submit" class="btn btn-primary">Submit Button</button>
              <button type="reset" class="btn btn-warning">Reset Button</button>
              <button onclick="cancelEvent();" type="button" class="btn btn-danger">Cancel Button</button>
            </form>
          </div>

        </div>

      </div>
    </div>


  </div>

</div>