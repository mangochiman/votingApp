<script type="text/javascript">

  function editSuggestion(suggestionID){
    window.location = '/edit_suggestion/' + suggestionID;
  }

</script>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Suggestions</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        New Suggestion
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <% if flash[:notice] %>
              <div class="alert alert-success alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                <%= flash[:notice] %>
              </div>
            <% end %>
            <form role="form" action="/home/create_suggestions">

              <div class="form-group">
                <label>Title</label>
                <input class="form-control" placeholder="Title" name="title"/>
              </div>

              <div class="form-group">
                <label>Suggestion</label>
                <textarea rows="3" class="form-control" placeholder="Suggestions" name="data"></textarea>
              </div>

              <button type="submit" class="btn btn-default">Submit Button</button>
              <button type="reset" class="btn btn-default">Reset Button</button>
            </form>
          </div>

        </div>

      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        My Suggestions(<%=  @suggestions.count %>)
      </div>
      <div class="row">
        <div class="col-lg-12">
          <br />
          <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Topic</th>
                      <th>Suggestions</th>
                      <th colspan="2" style="text-align: center;">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% count = 0 %>
                    <% @suggestions.each do |suggestion| %>
                      <tr>
                        <td><%= count= count + 1 %></td>
                        <td><%= suggestion.title %></td>
                        <td><%= suggestion.data %></td>
                        <td><button onclick="editSuggestion('<%= suggestion.suggestion_id %>')" class="btn btn-warning btn-block" type="button">Edit</button></td>
                        <td><button onclick="confirmAction('<%= suggestion.suggestion_id %>')" class="btn btn-danger btn-block" type="button">Delete</button></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->

        <!-- /.col-lg-6 -->
      </div>
    </div>

  </div>

</div>

<!-- /.row -->