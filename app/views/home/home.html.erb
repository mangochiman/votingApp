
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Dashboard</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Tournaments (<%= @all_tournaments.count %>)
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <% @tournaments.each do |tournament| %>
          <a class="list-group-item" href="#">
            <i class="fa fa-delicious fa-fw"></i><%= "#{tournament.name} <b>(#{tournament.start_date.to_date.strftime('%d-%b-%Y')} - #{tournament.end_date})</b>" %>
            <span class="pull-right text-muted small"><em><%= tournament.sponsored_by %></em>
            </span>
          </a>
        <% end %>
      </div>
      <!-- /.panel-body -->
    </div>

    <a class="btn btn-default btn-block" href="#">View All Tournaments</a>
  </div>
  <!-- /.col-lg-8 -->
  <div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bell fa-fw"></i> Recent Votes
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="list-group">
          <a class="list-group-item" href="#">
            <i class="fa fa-comment fa-fw"></i> New Comment
            <span class="pull-right text-muted small"><em>4 minutes ago</em>
            </span>
          </a>

        </div>
        <!-- /.list-group -->
        <a class="btn btn-default btn-block" href="#">View All Alerts</a>
      </div>
    </div>
  </div>
</div>